@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model helperland_project.ViewModel.LoginViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <link rel="shortcut icon" href="/images/favicon_img.png" type="image/x-icon">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel=stylesheet>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- header -->
    <header class="site-header">
        <div class="header-wrapper d-flex justify-content-between align-items-center">
            <a href="#" title="Helper hand" class="logo-block">
                <img class="large-logo" src="/images/site-logo-large.png" alt="Helper hand logo">
            </a>
            <div class="header-right-block">
                <div class="right-block-inner d-flex align-items-center">
                    <nav class="navbar navbar-expand-lg align-items-center">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav align-items-center">
                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserTypeId") == "1" || HttpContextAccessor.HttpContext.Session.GetString("UserTypeId") == null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link border-btn" asp-action="BookService" asp-controller="Home" title="Book a Cleaner">
                                            Book a
                                            Cleaner
                                        </a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a asp-action="Price" asp-controller="Home" class="nav-link none_active" title="Prices">Prices</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link none_active" href="#" title="Our Guarantee">Our Guarantee</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link none_active" href="#" title="Blog">Blog</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Contact" asp-controller="Home" class="nav-link none_active" title="Contact us">Contact us</a>
                                </li>
                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserTypeId") == "2")
                                {
                                    @*<li class="nav-item"> </li>*@
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link border-btn" asp-action="SpSignup" asp-controller="Home" title="Become a Helper">
                                            Become a
                                            Helper
                                        </a>
                                    </li>
                                }
                                @if (HttpContextAccessor.HttpContext.Session.GetString("loggedIn") == null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link border-btn" href="#" title="Login" data-bs-toggle="modal" data-bs-target="#exampleModal">Login</a>
                                    </li>
                                }
                                else
                                {
                                    @if (HttpContextAccessor.HttpContext.Session.GetString("UserTypeId") == "1")
                                    {
                                        <li>
                                            <div class="vertical_line">
                                            </div>
                                        </li>
                                        <li class="notification">
                                            <div class="align-items-center justify-content-center" id="notification">
                                                <a href="#"><img src="/images/icon-notification.png"></a>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="vertical_line">
                                            </div>
                                        </li>
                                        <li class="dropdown">
                                            <a class="nav-link" id="drpdwn" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <img src="/images/user.png" class="arow">
                                                <img src="/images/sp-arrow-down.png">
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                                <li>
                                                    <a class="dropdown-item" asp-action="dashboard" asp-controller="Home">My Dashboard</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-action="mySetting" asp-controller="Home">My Setting</a>
                                                </li>

                                                <li>
                                                    <a class="dropdown-item" asp-action="Logout" asp-controller="Home">Logout</a>
                                                </li>
                                            </ul>
                                        </li>
                                    }

                                    @if (HttpContextAccessor.HttpContext.Session.GetString("UserTypeId") == "2")
                                    {
                                        <li>
                                            <div class="vertical_line">
                                            </div>
                                        </li>
                                        <li class="notification">
                                            <div class="align-items-center justify-content-center" id="notification">
                                                <a href="#"><img src="/images/icon-notification.png"></a>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="vertical_line">
                                            </div>
                                        </li>
                                        <li class="dropdown">
                                            <a class="nav-link" id="drpdwn" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <img src="/images/user.png" class="arow">
                                                <img src="/images/sp-arrow-down.png">
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                                <li>
                                                    <a class="dropdown-item" asp-action="spNewServices" asp-controller="Home">New Services</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-action="spMySetting" asp-controller="Home">My Setting</a>
                                                </li>

                                                <li>
                                                    <a class="dropdown-item" asp-action="Logout" asp-controller="Home">Logout</a>
                                                </li>
                                            </ul>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <!-- Login Modal Start -->
    <div class="modal fade" id="exampleModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Login to your account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3" asp-action="Login" asp-controller="Home">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="col-12 emailModal">
                            <input asp-for="Email" type="email" class="form-control" id="log_Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <i class="far fa-user"></i>
                        </div>
                        <div class="col-12 pswModal">
                            <input asp-for="Password" type="password" class="form-control" id="log_Pass" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label check_label" for="gridCheck">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        <div class="col-12 login-btn">
                            <button type="submit">Login</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer justify-content-center">
                    <div class="forgotpsw">
                        <a id="frgLink" href="#" data-bs-toggle="modal" data-bs-target="#frgPsw">
                            Forgot
                            Password?
                        </a>
                    </div>
                    <div class="accoutReg text-center">
                        <p>Don't have an account? <a asp-action="UserSignUp" asp-controller="Home">Create an account</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login Modal End -->

    <div class="modal fade" id="changeModal" aria-labelledby="changeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered justify-content-center">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <img src="/images/yes-tickmark.png" alt="success" />
                </div>
                <div class="modal-body">
                    <div class="modal_register">
                        Password Changed Successfully
                    </div>
                </div>
                <div class="modal-footer justify-content-center login-btn">
                    <button type="submit" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="successModal" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered justify-content-center">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <img src="/images/yes-tickmark.png" alt="success" />
                </div>
                <div class="modal-body">
                    <div class="modal_register">
                        Registration Successfull
                    </div>
                </div>
                <div class="modal-footer justify-content-center login-btn">
                    <button type="submit" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal Start -->
    <div class="modal fade" id="frgPsw" aria-labelledby="frgPswLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="frgPswLabel">Forgot Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3" asp-action="ForgotPass" asp-controller="Home">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="col-12">
                            <input asp-for="Email" type="email" class="form-control" id="" placeholder="Email Address">
                        </div>
                        <div class="col-12 send-btn">
                            <button type="submit">Go</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer justify-content-center">
                    <div>
                        <a href="#" class="loginlink" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Login
                            Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Forgot Password Modal End -->
    <!-- booking successfully submitted modal -->
    <div class="modal fade" id="bookingsuccessModal" aria-labelledby="bookingsuccessModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered justify-content-center">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <img src="/images/yes-tickmark.png" alt="success" />
                </div>
                <div class="modal-body">
                    <div class="modal_register">
                        Booking has been  Successfully submitted
                    </div>
                    <div class="modal_register text-center">
                        Service Request ID : @HttpContextAccessor.HttpContext.Session.GetInt32("serviceRequestID")
                    </div>
                </div>
                <div class="modal-footer justify-content-center login-btn">
                    <button type="submit" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <!-- booking successfully submitted modal end-->
    <!-- -------------------------------------------cant accept service modal ------------------------------------------ -->
    <div class="modal fade" id="cantacceptModal" aria-labelledby="nospModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered justify-content-center">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <img src="/images/no-tickmark.png" alt="failed" />
                </div>
                <div class="modal-body">
                    <div class="modal_register">
                        <div class="text-danger">Access Denied</div>
                        contact Admin to Activate your account.
                    </div>
                </div>
                <div class="modal-footer justify-content-center login-btn">
                    <button type="submit" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>


    <div>
        @RenderBody()
    </div>

    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a asp-action="Index" asp-controller="Home" title="Helper Hand">
                            <img src="/images/site-logo.png" alt="Helper Hand">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li>
                                <a asp-action="Index" asp-controller="Home" title="Home">Home</a>
                            </li>
                            <li>
                                <a asp-action="About" asp-controller="Home" title="About">About</a>
                            </li>
                            <li>
                                <a href="#" title="Testimonials">Testimonials</a>
                            </li>
                            <li>
                                <a asp-action="Faq" asp-controller="Home" title="FAQs">FAQs</a>
                            </li>
                            <li>
                                <a href="#" title="Insurance Policy">Insurance Policy</a>
                            </li>
                            <li>
                                <a href="#" title="Impressum">Impressum</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook">
                                    <img src="/images/ic-facebook.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="/images/ic-instagram.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container text-center">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut feugiat nunc libero, ac malesuada ligula aliquam ac. <a href="#" title="Privacy Policy">Privacy Policy</a></p>
                <a href="#" class="yellow-btn ok-btn">OK!</a>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="row faq-policy text-center">
                <p>©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy</p>
            </div>
        </div>
    </footer>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/js/general.js"></script>

    <script>
            var email = '@HttpContextAccessor.HttpContext.Request.Cookies["Email"]';

            var pass = '@HttpContextAccessor.HttpContext.Request.Cookies["Password"]';

        $('#log_Email').val(email);
        $('#log_Pass').val(pass);
    </script>

    @if (ViewBag.frgtpass != null)
    {
        <script>
            var sucModal = new bootstrap.Modal(document.getElementById("frgPsw"), {});
            document.onreadystatechange = function () {
                sucModal.show();
            };
        </script>
    }

    @if (ViewBag.modal != null)
    {
        <script>
            var myModal = new bootstrap.Modal(document.getElementById("exampleModal"), {});
            document.onreadystatechange = function () {
                myModal.show();
            };
        </script>
    }

    @if (ViewBag.changepass != null)
    {
        <script>
            var sucModal = new bootstrap.Modal(document.getElementById("changeModal"), {});
            document.onreadystatechange = function () {
                sucModal.show();
            };
        </script>
    }

    @if (ViewBag.successModal != null)
    {
        <script>
            var sucModal = new bootstrap.Modal(document.getElementById("successModal"), {});
            document.onreadystatechange = function () {
                sucModal.show();
            };
        </script>
    }

    @if (HttpContextAccessor.HttpContext.Session.GetString("showBookSuccess") != null)
    {
        <script>

            var myModal = new bootstrap.Modal(document.getElementById("bookingsuccessModal"), {});
            document.onreadystatechange = function () {
                myModal.show();
            };
        </script>
    }

    @if (ViewBag.notvalid != null)
    {
        <script>

            var myModal = new bootstrap.Modal(document.getElementById("cantacceptModal"), {});
            document.onreadystatechange = function () {
                myModal.show();
            };
        </script>
    }
</body>
</html>
