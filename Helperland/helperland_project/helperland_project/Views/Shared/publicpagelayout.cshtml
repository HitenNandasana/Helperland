@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="/images/favicon_img.png" type="image/x-icon">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel=stylesheet>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- header -->
    <header class="site-header header-bg">
        <div class="header-wrapper d-flex justify-content-between align-items-center">
            <a asp-action="Index" asp-controller="Home" title="Helper hand" class="logo-block">
                <img src="/images/logo-small.png" alt="Helper hand logo">
            </a>
            <div class="header-right-block">
                <div class="right-block-inner d-flex align-items-center">
                    <nav class="navbar navbar-expand-lg align-items-center">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav align-items-center">
                                @if (HttpContextAccessor.HttpContext.Session.GetString("UserTypeId") == "1" || HttpContextAccessor.HttpContext.Session.GetString("UserTypeId") == null)
                                {
                                    <li class="nav-item">
                                        <div class="btn-wrapper text-center">
                                            <a asp-action="BookService" asp-controller="Home" title="Book now" class="blue-btn1">Book now</a>
                                        </div>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link none_active" asp-action="Price" asp-controller="Home" title="Prices">Prices & services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link none_active" href="#" title="Our Guarantee">Warranty</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link none_active" href="#" title="Blog">Blog</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link none_active" asp-action="Contact" asp-controller="Home" title="Contact us">Contact</a>
                                </li>

                                <li class="nav-item">
                                    <div class="btn-wrapper text-center">
                                        <a title="Become a Helper" asp-action="SpSignup" asp-controller="Home" class="blue-btn3">Become a Helper</a>
                                    </div>
                                </li>
                                @if (HttpContextAccessor.HttpContext.Session.GetString("FirstName") == null)
                                {
                                    <li class="nav-item">
                                        <div class="btn-wrapper text-center">
                                            <a asp-action="Index_Login" asp-controller="Home" title="Login" class="blue-btn2">Login</a>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <div class="vertical_line">
                                        </div>
                                    </li>
                                    <li class="notification">
                                        <div class="align-items-center justify-content-center" id="notification">
                                            <a href="#"><img src="/images/icon-notification.png"></a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="vertical_line">
                                        </div>
                                    </li>
                                    <li class="dropdown">
                                        <a class="nav-link" id="drpdwn" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <img src="/images/user.png" class="arow">
                                            <img src="/images/sp-arrow-down.png">
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                            <li>
                                                <a class="dropdown-item" asp-action="dashboard" asp-controller="Home">My Dashboard</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="mySetting" asp-controller="Home">My Setting</a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item" asp-action="Logout" asp-controller="Home">Logout</a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>


    <div>
        @RenderBody()
    </div>


    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a title="Helper Hand">
                            <img src="/images/site-logo.png" alt="Helper Hand">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li>
                                <a asp-action="Index" asp-controller="Home" title="Home">Home</a>
                            </li>
                            <li>
                                <a asp-action="About" asp-controller="Home" title="About">About</a>
                            </li>
                            <li>
                                <a href="#" title="Testimonials">Testimonials</a>
                            </li>
                            <li>
                                <a asp-action="Faq" asp-controller="Home" title="FAQs">FAQs</a>
                            </li>
                            <li>
                                <a href="#" title="Insurance Policy">Insurance Policy</a>
                            </li>
                            <li>
                                <a href="#" title="Impressum">Impressum</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook">
                                    <img src="/images/ic-facebook.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="/images/ic-instagram.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="row faq-policy text-center">
                <p>©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy</p>
            </div>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/js/general.js"></script>

    @if (HttpContextAccessor.HttpContext.Session.GetString("zipcode") != null)
    {
        <script>
            var userpostalcode = @HttpContextAccessor.HttpContext.Session.GetString("zipcode");
            console.log("this is called " + userpostalcode);
            $('#add_postal').val(userpostalcode);
            $('#add_postal').attr('disabled', 'disabled');
        </script>


    }

    @if (HttpContextAccessor.HttpContext.Session.GetString("ss_step_2") == "notset")
    {
        @if (ViewBag.foundsp != null)
        {
            <script>

                var nospModal = new bootstrap.Modal(document.getElementById("nospModal"), {});
                document.onreadystatechange = function () {
                    nospModal.show();
                };
            </script>
        }
        @if (ViewBag.foundsp == null)
        {
            <script>
                $(function () {
                    $('.postal_check_btn').click();
                });
                $(document).on('click', '.postal_check_btn', function () {

                    $(".ss_step_1").addClass('fade');
                    $(".ss_step_2").removeClass('fade');
                    $(".col-step-1").removeClass('active_tab');
                    $(".col-step-2").addClass('active').addClass('active_tab');
                    step_2_img.src = "/images/schedule-plan.png";
                    progress_step_2 = 1;
                    console.log("this is progress step 2" + progress_step_2);
                    //set date to be disable before today & set time
                    var today = new Date();
                    today.setHours(today.getHours() + 2);
                    var dd = String(today.getDate()).padStart(2, '0');
                    var mm = String(today.getMonth() + 1).padStart(2, '0');
                    var yyyy = today.getFullYear();
                    var hr = today.getHours();
                    var minit = today.getMinutes();

                    var max_time = hr + ':' + minit;
                    $('#service_time').val(max_time);

                    var max_date = yyyy + '-' + mm + '-' + dd;
                    $('#service_date').attr('min', max_date);

                });
            </script>
        }
    }

    @if (HttpContextAccessor.HttpContext.Session.GetInt32("address_fetch_cnt") != null)
    {
        <script>
            var cnt_addresst = @HttpContextAccessor.HttpContext.Session.GetInt32("address_fetch_cnt");
            var cnt_address = cnt_addresst + 1;
            console.log("this is cnt_addresst" + cnt_addresst);
        </script>
    }
</body>
</html>
